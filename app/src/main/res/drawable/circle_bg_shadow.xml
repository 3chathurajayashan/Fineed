<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Circle color -->
    <solid android:color="#CCCCCC"/>

    <!-- Shadow effect using outer stroke with transparency -->
    <stroke
        android:width="4dp"
        android:color="#33000000" />

    <!-- Optional padding to make shadow visible -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
