<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@drawable/back"
        android:contentDescription="Back"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Company Logo -->
    <ImageView
        android:id="@+id/companyLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/nvidia"
        android:layout_marginTop="24dp"
        android:background="@drawable/logo_background"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Job Title -->
    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Senior Project Manager"
        android:textSize="22sp"
        android:textColor="#222222"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/companyLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Company Name -->
    <TextView
        android:id="@+id/companyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NVIDIA Corporation Â· USA/Canada"
        android:textSize="14sp"
        android:textColor="#777777"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/jobTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Job Type Badge -->
    <TextView
        android:id="@+id/jobType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full-time"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/tag_green"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/companyName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Job Description Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/jobDescCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/jobType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/jobDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join NVIDIA Corporation and lead cutting-edge AI and GPU projects. As a Senior Project Manager, you will coordinate multi-disciplinary teams, manage project timelines, and ensure delivery excellence. We provide flexible remote work options, professional growth, and a collaborative global environment. Be part of shaping the future of computing with innovative technology."
            android:textColor="#444444"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Apply Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/applyButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Apply Now"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#000000"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="28dp"

        app:layout_constraintTop_toBottomOf="@id/jobDescCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
