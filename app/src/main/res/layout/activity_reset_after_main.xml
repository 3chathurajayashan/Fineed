<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".reset_password_confirmation_MainActivity">

    <!-- Gradient Header -->
    <View
        android:id="@+id/headerGradient"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@drawable/gradient_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Illustration Placeholder -->
    <ImageView
        android:id="@+id/illustrationImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="-60dp"
       android:src="@drawable/password"
        android:scaleType="centerInside"
        android:contentDescription="Confirmation Illustration"
        app:layout_constraintTop_toBottomOf="@id/headerGradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card Container -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_card_white"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/illustrationImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Your Email"
            android:textSize="22sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif-medium" />

        <!-- Description -->
        <TextView
            android:id="@+id/cardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Weâ€™ve sent instructions to reset your password. Please check your inbox and follow the steps."
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>

    <!-- Back to Sign In Button -->
    <Button
        android:id="@+id/backToSignInButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Back to Sign In"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#588236"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
