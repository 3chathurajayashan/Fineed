<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".setting_page_MainActivity">

    <!-- Top AppBar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:title="Settings"
        app:titleTextColor="#000000"
        app:navigationIcon="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Account Section -->
    <TextView
        android:id="@+id/accountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="18sp"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Change Password -->
    <LinearLayout
        android:id="@+id/changePasswordLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_card_white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/accountTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/changePasswordText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/changePasswordIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/right"
            android:tint="#588236"/>
    </LinearLayout>

    <!-- Notifications Section -->
    <TextView
        android:id="@+id/notificationsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="18sp"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/changePasswordLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Email Notifications -->
    <LinearLayout
        android:id="@+id/emailNotificationsLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_card_white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/notificationsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/emailNotificationText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email Notifications"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_weight="1"/>

        <Switch
            android:id="@+id/switchNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Notifications"
            android:thumbTint="#588236"
            android:trackTint="#588236"/>

    </LinearLayout>

    <!-- Push Notifications -->
    <LinearLayout
        android:id="@+id/pushNotificationsLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_card_white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/emailNotificationsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/pushNotificationText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Push Notifications"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_weight="1"/>

        <Switch
            android:id="@+id/pushSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="#FFFFFF"
            android:trackTint="#588236"
            android:checked="true"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/pushNotificationsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Log Out Button -->
    <!-- Sign Out Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signOutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF3B30"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
